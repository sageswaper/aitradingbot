# ── MT5 Connection ─────────────────────────────────────────────
MT5_LOGIN=12345678
MT5_PASSWORD=your_password_here
MT5_SERVER=ICMarkets-Demo
# MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe   # optional

# ── Trading Symbol & Timeframe ─────────────────────────────────
SYMBOL=EURUSD
TIMEFRAME=M15
BARS_TO_FETCH=500

# ── Risk Controls ──────────────────────────────────────────────
MAX_DRAWDOWN_PCT=5.0
MAX_OPEN_TRADES=3
RISK_HIGH_CONF=2.0
RISK_MED_CONF=1.0
RISK_LOW_CONF=0.5

# ── LLM Provider ───────────────────────────────────────────────
# Options: openai | anthropic | gemini
LLM_PROVIDER=openai
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.1

OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

GEMINI_API_KEY=AIza...
GEMINI_MODEL=gemini-1.5-pro

# ── Operational Mode ───────────────────────────────────────────
# Set DRY_RUN=true to simulate without placing real orders
DRY_RUN=true
LOG_LEVEL=INFO
